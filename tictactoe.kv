#:kivy 1.11.1

<TicTacTsadaoeGame>:
  BoxLayout:
    padding: 20
    orientation: "vertical"
    canvas.before:
      Color: 
        rgba: 10/255, 10/255, 35/255, 1
      Rectangle:
        pos: self.pos
        size: self.size
    
    
    # Info bar
    BoxLayout:
      spacing: 10
      halign: "left"
      size_hint_y: 0.1
      padding: 0, 0, 0, 30

      # Player X score
      BoxLayout: 
        spacing: 10
        halign: "left"
        orientation: "vertical"

        Label:
          text: "Player X"
          halign: "left"
          font_size: 20
          valign: "center"
          color: 255/255, 51/255, 51/255, 1

        Label:
          text: "Score: 0"
          halign: "left"
          valign: "center"
          font_size: 18

      BoxLayout:
        Label:
          text: "Turn:"
          font_size: 20
          valign: "center"
          halign: "center"
     
        Label:
          text: "X"
          font_size: 20
          valign: "center"
          halign: "center"
          color: 255/255, 51/255, 51/255, 1
          

      # Player O score
      BoxLayout:
        spacing: 10
        halign: "left"
        orientation: "vertical"

        Label:
          text: "Player O"
          halign: "left"
          font_size: 20
          valign: "center"
          color: 25/255, 140/255, 255/255, 1

        Label:
          text: "Score: 0"
          halign: "left"
          valign: "center"
          font_size: 18


    # Game field
    GridLayout:
      cols: 3
      spacing: 4
      size_hint_y: 0.7

      canvas.before:
        Color: 
          rgba: 255/255, 255/255, 255/255, 1
        Rectangle:
          pos: self.pos[0] + 2, self.pos[1] + 2
          size: self.width - 4, self.height - 4 

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

      Button:
        text: ""
        font_size: 32
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

    # Keypad  
    BoxLayout:
      spacing: 20
      size_hint_y: 0.1
      padding: 0, 30, 0, 0

      Button:
        text: "Reset Game"
        font_size: 20
        background_normal: ""
        background_color: 10/255, 10/255, 35/255, 1

        canvas.before:
          Color: 
            rgba: 255/255, 255/255, 255/255, 1
          Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

      Button:
        text: "Reset Round"
        font_size: 20
        background_normal: ""
        on_press: root.on_move_click()
        background_color: 10/255, 10/255, 35/255, 1

        canvas.before:
          Color: 
            rgba: 255/255, 255/255, 255/255, 1
          Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
