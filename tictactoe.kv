#:kivy 1.11.1

<TicTacToeGame>:
  BoxLayout:
    padding: 16
    orientation: "vertical"
    

    # Info bar
    BoxLayout:
      spacing: 8
      halign: "left"
      size_hint_y: 0.1
      padding: 0, 0, 0, 8

      # Player X score
      BoxLayout:
        spacing: 0
        halign: "left"
        orientation: "vertical"

        Label:
          text: "Player X"
          halign: "left"
          font_size: 20
          valign: "center"
          color: 255/255, 51/255, 51/255, 1

        Label:
          text: "Score: 0"
          halign: "left"
          valign: "center"
          font_size: 18

      # Player O score
      BoxLayout:
        spacing: 0
        halign: "left"
        orientation: "vertical"

        Label:
          text: "Player O"
          halign: "left"
          font_size: 20
          valign: "center"
          color: 25/255, 140/255, 255/255, 1

        Label:
          text: "Score: 0"
          halign: "left"
          valign: "center"
          font_size: 18


    # Game field
    GridLayout:
      cols: 3
      spacing: 4
      size_hint_y: 0.7
      background_color: 1, 0, 0, 1

      Button:
        text: "1"
        font_size: 32
      
      Button:
        text: "2"
        font_size: 32

      Button:
        text: "3"
        font_size: 32

      Button:
        text: "4"
        font_size: 32

      Button:
        text: "5"
        font_size: 32

      Button:
        text: "6"
        font_size: 32

      Button:
        text: "7"
        font_size: 32

      Button:
        text: "8"
        font_size: 32

      Button:
        text: "9"
        font_size: 32

    # Keypad  
    BoxLayout:
      spacing: 8
      size_hint_y: 0.1
      padding: 0, 10, 0, 0

      Button:
        text: "Reset Game"
        font_size: 20
        color: 255/255, 255/255, 255/255, 1
        background_color: 0, 0, 0, 0.1

        canvas.before:
          Color: 
            rgba: 255/255, 255/255, 255/255, 1
          Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

      Button:
        text: "Reset Round"
        font_size: 20
        color: 255/255, 255/255, 255/255, 1
        background_color: 0, 0, 0, 0.1

        canvas.before:
          Color: 
            rgba: 255/255, 255/255, 255/255, 1
          Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
